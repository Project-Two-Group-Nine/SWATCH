<section class="">

<h3>Login or Sign Up</h3>

<form class="login-form">
  <div>
    <label for="email-login">email:</label>
    <input type="text" id="email-login" />
  </div>
  <div>
    <label for="password-login">password:</label>
    <input type="password" id="password-login" />
  </div>
  <div>
    <button class="button-primary button-round form-button" type="submit">login</button>
  </div>
</form>

<form class="signup-form">
  <div>
    <label for="name-signup">username:</label>
    <input type="text" id="name-signup" />
  </div>
  <div>
    <label for="email-signup">email:</label>
    <input type="text" id="email-signup" />
  </div>
  <div>
    <label for="password-signup">password:</label>
    <input type="password" id="password-signup" />
  </div>
  <div>
    <button class="button-primary button-round form-button" type="submit">signup</button>
  </div>
</form>

</section>

</div>

