<div class="col col-md-4 col-lg-3">

<article class="card card-vertical">
    <a href="/single-product/{{id}}">
        <h2 class="card-title">{{name}}</h2>
    </a>
    <img class="card-image" onError="this.onerror=null; this.src='/images/default-img.png'" src={{image_link}} />
    <div class="card-text">
        <p>{{{description}}}</p>
    </div>

    <div class="card-actions">
        <button class="button-info button-round remove-wishlist" id={{id}}>Remove</button>
    </div>
</article>

</div>