<section class="section-tertiary">
    <div class="container">

        <h3>All Products</h3>        

        <div class="row all-products">

            <div class="col col-md-7">
                {{#each products as |product|}}
                    {{#unless product.featured}}
                            {{> product-info product}}
                     {{/unless}}
                {{/each}}
            </div>

            <div class="col col-md-5 col-sm-order-1">
                {{#each products as |product|}}
                    {{#if product.featured}}
                        {{> product-info product}}
                    {{/if}}
                {{/each}}
            </div>

        </div>

    </div>

<ul class="pagination" data-pagetotal="{{products.page_total}}"></ul>

</section>

{{#if loggedIn}}
    <script src="/javascript/add-wishlist.js"></script>
    <script src="/javascript/show-modal.js"></script>
    <script src="/javascript/add-featured.js"></script>
{{/if}}

